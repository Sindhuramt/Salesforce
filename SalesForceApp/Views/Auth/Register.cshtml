@model RegistrationViewModel

<h2>Register</h2>

<form asp-action="Register" method="post">
    <div class="form-group">
        <label for="CustomerFirstName">First Name:</label>
        <input type="text" id="CustomerFirstName" name="Customer.CustomerFirstName" required />
    </div>

    <div class="form-group">
        <label for="CustomerLastName">Last Name:</label>
        <input type="text" id="CustomerLastName" name="Customer.CustomerLastName" required />
    </div>

    <div class="form-group">
        <label for="CustomerMobile">Mobile:</label>
        <input type="text" id="CustomerMobile" name="Customer.CustomerMobile" required pattern="[0-9]+" />
    </div>

    <div class="form-group">
        <label for="CustomerEmail">Email:</label>
        <input type="email" id="CustomerEmail" name="Customer.CustomerEmail" required />
    </div>

    <div class="form-group">
        <label for="CustomerAddress">Address:</label>
        <input type="text" id="CustomerAddress" name="Customer.CustomerAddress" required />
    </div>

    <div class="form-group">
        <label for="AccountNo">Account No:</label>
        <input type="text" id="AccountNo" name="Customer.AccountNo" required />
    </div>

    <div class="form-group">
        <label for="SecurityQuestionsCode">Select Security Question:</label>
        <select id="SecurityQuestionsCode" name="Customer.SecurityQuestionsCode" required>
            @foreach (var question in Model.SecurityQuestions)
            {
                <option value="@question.Code">@question.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="SecurityAnswerCode">Security Answer:</label>
        <input type="text" id="SecurityAnswerCode" name="Customer.SecurityAnswerCode" required />
    </div>

    <div class="form-group">
        <label for="LoginPassword">Password:</label>
        <input type="password" id="LoginPassword" name="Customer.LoginPassword" required />
    </div>

    <button type="submit">Register</button>
    <a asp-action="Login">Back to Login</a>
</form>

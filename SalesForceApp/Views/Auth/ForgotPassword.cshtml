@model ForgotPasswordViewModel

<h2>Forgot Password</h2>

<form asp-action="ForgotPassword" method="post">
    <label for="SecurityQuestionCode">Select Question:</label>
    <select id="SecurityQuestionCode" name="SecurityQuestionCode" required>
        @foreach (var question in Model.SecurityQuestions)
        {
            <option value="@question.Code">@question.Name</option>
        }
    </select>

    <label for="SecurityAnswer">Type The Answer:</label>
    <input type="text" id="SecurityAnswer" name="SecurityAnswer" required />

    <label for="Mobile">Enter Mobile no:</label>
    <input type="text" id="Mobile" name="Mobile" required />

    <label for="NewPassword">Enter New Password:</label>
    <input type="password" id="NewPassword" name="NewPassword" required />

    <button type="submit">Submit</button>
    <a asp-action="Login">Back to Login</a>
</form>
